{plugins, [pc]}.

{provider_hooks, [
    {pre, [
        {compile, {pc, compile}},
        {clean, {pc, clean}}
    ]}
]}.

{port_env, [
    {"darwin|freebsd|openbsd", "LDFLAGS", "$LDFLAGS -liconv"},
    {"freebsd|openbsd", "CFLAGS", "$CFLAGS -I/usr/local/include"},
    {"freebsd|openbsd", "LDFLAGS", "$LDFLAGS -L/usr/local/lib"}
]}.

{port_specs, [{"priv/eiconv_nif.so", ["c_src/*.c"]}]}.

{profiles, [
    {test, [
        {xref_checks, [
            undefined_function_calls,
            locals_not_used,
            deprecated_function_calls
        ]},

        {xref_ignores, [
        ]},

        {dialyzer, [
          {warnings, [
              no_return
          ]}
        ]},

        {cover_enabled, true},
        {cover_print_enabled, true},
        {plugins, [pc]},
        {artifacts, ["priv/eiconv_nif.so"]},
        {provider_hooks, [
            {post,
                [
                    {compile, {pc, compile}},
                    {clean, {pc, clean}}
                ]
            }
        ]}
    ]}
]}.
